@model IEnumerable<MVCExamenMichely.Models.PersonajeSerie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Create">Crear nuevo personaje</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <img src=" @Html.DisplayFor(modelItem => item.Imagen)" style="width:100px"/>
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.IdPersonaje  }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdPersonaje }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPersonaje })
            </td>
        </tr>
}
    </tbody>
</table>
